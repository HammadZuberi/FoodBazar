@using FoodBazar.Services.Web.Models.Dto
@model LoginRequestDto

<form method="post">

	<div class="container p-4">
		<div class="row text-center">
			<h1>Login</h1>
		</div>
	</div>
	<div class="row text-center">
		<div asp-validation-summary="All" class="text-danger"></div>
	</div>
	<div class="row align-content-center form-group"> 
		<div class="  col-12 col-md-6 offset--md-3 pb-2">
			<input  asp-for="UserName" class="form-control" placeholder="User Name"/>
		</div>
		<div class="  col-12 col-md-6 offset--md-3  pb-2">
			<input asp-for="Password" class="form-control" placeholder="Password" />
		</div>
		<div class="  col-12 col-md-6 offset--md-3  pb-2">
			<button type="submit" class="form-control btn btn-success" value="Submit" >Login </button>
		</div>

	</div>
</form>

