@using FoodBazar.Web.Models
@model ProductDto

<form asp-action="EditProduct" enctype="multipart/form-data">
	<br />
	<div class="container border p-3">
		<h1 class="text-white text-center">Edit Product</h1>
		<input hidden asp-for="ProductId" />
		<hr />
		<div class="row">
			<div class="col-10">
				<div class="row">
					<div class="col-2">
						<label class="control-label pt-2" style="font-size:20px;">Name</label>
					</div>
					<div class="col-10 pb-3">
						<input class="form-control" asp-for="Name" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="col-2">
						<label class="control-label pt-2" style="font-size:20px;" asp-for="CategoryName">Category Name</label>

					</div>
					<div class="col-10 pb-3">
						<input class="form-control" asp-for="CategoryName" />
						<span asp-validation-for="CategoryName" class="text-danger"></span>
					</div>
					<div class="col-2">
						<label class="control-label pt-2" style="font-size:20px;">Description</label>

					</div>
					<div class="col-10 pb-3">
						<textarea class="form-control" asp-for=Description rows="5"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="col-2">
						<label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
					</div>
					<div class="col-10 pb-3">
						<input class="form-control" asp-for="Image" />
						<input class="form-control" hidden asp-for="ImageUrl" />
						<input class="form-control" hidden asp-for="ImageLocalPath" />
						<span asp-validation-for="Image" class="text-danger"></span>
					</div>
					<div class="col-2">
						<label class="control-label pt-2" style="font-size:20px;">Price</label>

					</div>
					<div class="col-10 pb-3">
						<input class="form-control" asp-for="Price" />
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
					<div class="col-5 offset-2">

						<a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
					</div>
					<div class="col-5">
						<input type="submit" value="Update" class="btn btn-success form-control" />
					</div>
				</div>
			</div>
			<div class="col-2">
				<img src="@Model.ImageUrl" class="w-100" alt="@Model.Name" />
			</div>

		</div>
	</div>
</form>

@section Scripts {
	<partial name="_validationscriptspartial" />
}